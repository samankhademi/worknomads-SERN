  "description": "sample for worknomads SQL, Express, React, Node, TS",
  "main": "index.ts",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development NODE_PATH=./src nodemon src/index.ts",
    "migration:generate": "typeorm-ts-node-esm migration:generate src/common/migrations/users -d src/common/database/datasource.ts",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm-ts-node-esm -- migration:run -d src/common/database/typeorm.migration.config.ts",
    "migration:revert": "typeorm-ts-node-esm -- migration:revert",
    "test": "echo \"Error: no test sepcified\" && exit 1"
  },
